<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:layout_marginTop="100dp"
    android:paddingRight="20dp"
    tools:context=".Otp">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Enter the OTP Reveived in Your Mobile Number"
            android:textSize="18dp"
            android:textStyle="bold" />




    <ProgressBar
        android:visibility="gone"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/progress2"
        android:id="@+id/progressbarOtp"
        android:layout_centerInParent="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        ></ProgressBar>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="10dp"
        android:elevation="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:id="@+id/user_cardView">

        <EditText
            android:background="#ad5b5d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Otp."
            android:drawableLeft="@drawable/password"
            android:textSize="13sp"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:id="@+id/edt_OTP" />
    </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/otpSubmit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="#ad5b5d"
                android:text="Submit"/>
            <Button
                android:id="@+id/resend"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="#ad5b5d"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:text="Resend"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/texttime"
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:text="  "/>

    </LinearLayout>


</LinearLayout>