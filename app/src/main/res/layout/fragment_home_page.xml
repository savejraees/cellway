<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:overScrollMode="always"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingConstraints">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusedByDefault="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="blocksDescendants">

        <ProgressBar
            android:visibility="gone"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progress2"
            android:id="@+id/progressbarHome"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            ></ProgressBar>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#FAFBFC"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants"
        android:focusedByDefault="true"
        android:focusableInTouchMode="true"
        tools:context=".fragment.HomePage">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:visibility="gone"
                android:id="@+id/editSearch"
                android:layout_marginTop="15dp"
                android:background="@drawable/search_round"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:hint="search here"
                android:focusable="false"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:drawableRight="@drawable/ic_search_blue"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"></EditText>


            <!--            <SearchView-->
            <!--                android:focusable="false"-->
            <!--                android:id="@+id/mobsearchView"-->
            <!--                android:layout_gravity="center_horizontal"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="40dp"-->
            <!--                android:queryHint="Search Here"-->
            <!--                android:windowSoftInputMode="stateHidden"-->
            <!--                android:background="@drawable/search_round"-->
            <!--                android:iconifiedByDefault="false"-->
            <!--                android:gravity="center"-->
            <!--                android:layout_marginTop="15sp"-->
            <!--                android:layout_marginRight="40dp"-->
            <!--                android:layout_marginLeft="40dp"-->
            <!--                android:layout_alignParentTop="true" />-->


            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FAFBFC"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layoutMobile"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:gravity="top"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/mobile_main" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Mobile"
                        android:textSize="12dp"
                        android:textColor="#000" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="10dp"

                    android:layout_height="70dp"

                    android:gravity="top"
                    android:orientation="vertical">


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutTablet"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:gravity="top"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/tablet" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="Tablet"
                        android:textColor="#000"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="10dp"

                    android:layout_height="70dp"

                    android:gravity="top"
                    android:orientation="vertical">


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_Accessories"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:gravity="top"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/accessoris" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="Accessories"
                        android:textColor="#000"
                        android:textSize="12dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="70dp"
                    android:gravity="top"
                    android:orientation="vertical">


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutMore"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:gravity="top"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/more3" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="More"
                        android:textSize="12dp"
                        android:textColor="#000" />
                </LinearLayout>
            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFBFC"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="#027BE9">

                    <TextView
                        android:id="@+id/MarqueeText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:freezesText="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="14dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="175dp">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pic_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="175dp"></androidx.viewpager.widget.ViewPager>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="#31312727"
                        android:layout_gravity="bottom|end"
                        android:layout_alignParentBottom="true">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tab_dots"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            app:tabBackground="@drawable/indicator"
                            app:tabIndicatorHeight="0dp"
                            android:layout_marginRight="5dp"
                            android:layout_alignParentRight="true"></com.google.android.material.tabs.TabLayout>
                    </RelativeLayout>


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="LATEST ARRIVALS"
                    android:textColor="#000"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/rv_latest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

        </androidx.recyclerview.widget.RecyclerView>


        <!--  </LinearLayout>-->


    </LinearLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
    <!-- android:nestedScrollingEnabled="true"-->